<?xml version="1.0"?>
<robot name="lab05_test_robot">
  <!-- Simple 3-DoF arm for lab exploration -->
  <link name="base_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.05" length="0.02"/>
      </geometry>
      <material name="grey">
        <color rgba="0.4 0.4 0.4 1"/>
      </material>
    </visual>
  </link>

  <link name="shoulder_link">
    <visual>
      <origin xyz="0 0 0.1" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.03" length="0.2"/>
      </geometry>
      <material name="orange">
        <color rgba="0.9 0.5 0.1 1"/>
      </material>
    </visual>
  </link>

  <link name="elbow_link">
    <visual>
      <origin xyz="0 0 0.1" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.025" length="0.2"/>
      </geometry>
      <material name="blue">
        <color rgba="0.2 0.4 0.9 1"/>
      </material>
    </visual>
  </link>

  <link name="wrist_link">
    <visual>
      <origin xyz="0 0 0.08" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.02" length="0.16"/>
      </geometry>
      <material name="green">
        <color rgba="0.2 0.8 0.4 1"/>
      </material>
    </visual>
  </link>

  <link name="tool_link">
    <visual>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <geometry>
        <box size="0.05 0.05 0.1"/>
      </geometry>
      <material name="black">
        <color rgba="0.1 0.1 0.1 1"/>
      </material>
    </visual>
  </link>

  <joint name="shoulder_joint" type="revolute">
    <parent link="base_link"/>
    <child link="shoulder_link"/>
    <origin xyz="0 0 0.01" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-1.57" upper="1.57" effort="10" velocity="1.5"/>
  </joint>

  <joint name="elbow_joint" type="revolute">
    <parent link="shoulder_link"/>
    <child link="elbow_link"/>
    <origin xyz="0 0 0.2" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-2.0" upper="2.0" effort="8" velocity="1.5"/>
  </joint>

  <joint name="wrist_joint" type="revolute">
    <parent link="elbow_link"/>
    <child link="wrist_link"/>
    <origin xyz="0 0 0.2" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-2.5" upper="2.5" effort="6" velocity="2.0"/>
  </joint>

  <joint name="tool_joint" type="fixed">
    <parent link="wrist_link"/>
    <child link="tool_link"/>
    <origin xyz="0 0 0.16" rpy="0 0 0"/>
  </joint>
</robot>
